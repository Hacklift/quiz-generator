{
	"devDependencies": {
		"eslint": "^9.9.1",
		"husky": "^9.1.5",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3"
	},
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,css,md}": [
			"prettier --write"
		]
	},
	"husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
